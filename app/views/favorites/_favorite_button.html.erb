
  <% if current_user.favoriting?(micropost) %>
    <%= form_with(model: current_user.favorites.find_by(micropost_id: micropost.id), local: true, class: "d-inline", method: :delete) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= f.submit 'Unfavorite', class: 'btn btn-danger' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.favorites.build, local: true, class: "d-inline") do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= f.submit 'Favorite', class: 'btn btn-primary' %>
    <% end %>
  <% end %>
